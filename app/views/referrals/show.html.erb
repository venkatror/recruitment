<%- model_class = Referral -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @referral.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @referral.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @referral.role %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technology) %>:</strong></dt>
  <dd><%= array_to_string_html(@referral.technology) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:referredby) %>:</strong></dt>
  <dd><%= @referral.referredby %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cv) %>:</strong></dt>
  <dd><%= link_to 'My CV', @referral.cv.url %>
</dd>
  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              referrals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_referral_path(@referral), :class => 'btn' %>
  <%= link_to t('.delete', :default => t("helpers.links.delete")),
              referral_path(@referral),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
