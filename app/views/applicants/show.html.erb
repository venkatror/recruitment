<%- model_class = Applicant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <p style="color:#40C035">Personal Details:</p>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @applicant.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lname) %>:</strong></dt>
  <dd><%= @applicant.lname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @applicant.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @applicant.mobile %></dd>
  <p style="color:#40C035">Education Details:</p>
  <dt><strong><%= model_class.human_attribute_name(:education) %>:</strong></dt>
  <dd><%= @applicant.education %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technology) %>:</strong></dt>
  <dd><%= @applicant.technology %></dd>
  <dt><strong><%= model_class.human_attribute_name(:experience) %>:</strong></dt>
  <dd><%= @applicant.experience %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @applicant.role %></dd>
  <p style="color:#40C035">Interview Details:</p>
  <dt><strong><%= model_class.human_attribute_name(:round) %>:</strong></dt>
  <dd><%= @applicant.round %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scheduleofinterview) %>:</strong></dt>
  <dd><%= @applicant.scheduleofinterview %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interviewers) %>:</strong></dt>
  <dd><%= @applicant.interviewers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @applicant.status %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cv) %>:</strong></dt>
  <dd><%= link_to 'My CV', @applicant.cv.url %>
</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              applicants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_applicant_path(@applicant), :class => 'btn' %>
  <%= link_to t('.delete', :default => t("helpers.links.delete")),
              applicant_path(@applicant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
