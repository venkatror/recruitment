<%- model_class = Technology -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
   <form class="form-search">

    <%= text_field_tag :name, params[:name] %>

    <button type="submit" class="btn">Search</button>
    </form><br>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @technologies.each do |technology| %>
      <tr>
        <td><%= link_to technology.id, technology_path(technology) %></td>
        <td><%= technology.name %></td>
        <td><%= technology.description %></td>
        <td><%=l technology.created_at %></td>
        <td>
                                  <%= link_to 'View', technology,:class => 'btn btn-primary' %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_technology_path(technology), :class => 'btn btn-mini' %>
          <%= link_to t('.delete', :default => t("helpers.links.delete")),
                      technology_path(technology),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_technology_path,
            :class => 'btn btn-primary' %>
